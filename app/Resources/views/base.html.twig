<!doctype html>
<!--[if lt IE 7]>
<html class="no-js ie lt-ie9 lt-ie8 lt-ie7" lang=""> <![endif]-->
<!--[if IE 7]>
<html class="no-js ie lt-ie9 lt-ie8" lang=""> <![endif]-->
<!--[if IE 8]>
<html class="no-js ie lt-ie9" lang=""> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang=""> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block page_title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}"/>
    <link rel="apple-touch-icon" href="{{ asset('apple-icon.png') }}"/>

    <meta name="description" content="{% block meta_description %}{% endblock %}">
    <meta name="keywords" content="{% block meta_keywords %}{% endblock %}">

    {% block meta_og %}
        {% set _meta_og_type        = block('meta_og_type') %}
        {% set _meta_og_locale      = block('meta_og_locale') %}
        {% set _meta_og_site_name   = block('meta_og_site_name') %}
        {% set _meta_og_title       = block('meta_og_title') %}
        {% set _meta_og_url         = block('meta_og_url') %}
        {% set _meta_og_description = block('meta_og_description') %}
        {% set _meta_og_img         = block('meta_og_img') %}
        {% set _meta_og_img_type    = block('meta_og_img_type') %}
        {% set _meta_og_img_width   = block('meta_og_img_width') %}
        {% set _meta_og_img_height  = block('meta_og_img_height') %}

        <meta property="og:type" content="{{ _meta_og_type|default('website') }}"/>
        <meta property="og:locale" content="{{ _meta_og_locale|default('en_EN') }}"/>
        {% if _meta_og_site_name %}<meta property="og:site_name" content="{{ _meta_og_site_name }}"/>{% endif %}
        {% if _meta_og_title %}<meta property="og:title" content="{{ _meta_og_title }}"/>{% endif %}
        {% if _meta_og_url %}<meta property="og:url" content="{{ _meta_og_url }}"/>{% endif %}
        {% if _meta_og_description %}<meta property="og:description" content="{{ _meta_og_description }}"/>{% endif %}
        {% if _meta_og_img %}<meta property="og:image" content="{{ _meta_og_img }}"/>{% endif %}
        {% if _meta_og_img_type %}<meta property="og:image:type" content="{{ _meta_og_img_type }}"/>{% endif %}
        {% if _meta_og_img_width %}<meta property="og:image:width" content="{{ _meta_og_img_width }}"/>{% endif %}
        {% if _meta_og_img_height %}<meta property="og:image:height" content="{{ _meta_og_img_height }}"/>{% endif %}
    {% endblock %}

    {% block stylesheet_all %}
        <link rel="stylesheet" href="{{ asset('components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('components/fancybox/source/jquery.fancybox.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('css/template.css') }}">
    {% endblock %}

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
{% block body %}
    {% block browserupgrade %}
        <!--[if lt IE 8]>
        <p class="browserupgrade">Вы используете <strong>старый</strong> браузер. Пожалуйства
            <a href="http://browsehappy.com/">обновите свой браузер</a>.</p>
        <![endif]-->
    {% endblock %}

    {% block page_wrapper %}
        <div class="page-wrapper">
            <div class="page-buffer ">

                {% include 'common/navbar.html.twig' %}

                {% block top_bar %} {% endblock %}

                {% block content_wrapper %}
                    <div class="content-wr">
                        {% block content_top %}{% endblock %}
                        {% block content %}{% endblock %}
                        {% block content_bottom %}{% endblock %}
                    </div>
                {% endblock %}

                {% block bottom_bar %}{% endblock %}
            </div>
        </div>
    {% endblock %}

    {% block footer_wrapper %}
        <footer class="page-footer">
            {% block footer %}
                <div class="footer" style="background-color: #f8f8f8; padding: 40px 0; margin-top: 40px; border-top: 1px solid #e7e7e7">
                    <div class="container">
                        Footer
                    </div>
                </div>
            {% endblock %}
        </footer>
    {% endblock %}

    {% block modals %}{% endblock %}

    {% block javascripts %}
        <script src="{{ asset('components/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('components/fancybox/source/jquery.fancybox.pack.js') }}"></script>
        <script src="{{ asset('components/jquery-form/jquery.form.js') }}"></script>
        <script src="{{ asset('js/plugins.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}

{% endblock %}
</body>
</html>
